# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.{css,scss}]
indent_style = space
indent_size = 2

[*.{js,coffee}]
indent_style = space
indent_size = 2

[*.rb]
indent_style = space
indent_size = 2

[*.{ex,exs}]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

